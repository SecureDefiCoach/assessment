# SECURITY FIX: Secure Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Application Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/realestatedb_secure
# For production, use MongoDB Atlas or secure connection string:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/realestatedb_secure?retryWrites=true&w=majority

# JWT Configuration (CRITICAL: Change these in production)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourapp.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Session Configuration (if using sessions)
SESSION_SECRET=your-super-secure-session-secret-key-minimum-32-characters

# Blockchain Configuration
ETHEREUM_NETWORK=localhost
ETHEREUM_RPC_URL=http://localhost:8545
PRIVATE_KEY=your-ethereum-private-key-for-deployment
CONTRACT_FACTORY_ADDRESS=0x...

# Cloud Storage (if using)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Payment Configuration (if using)
PAYTM_MERCHANT_ID=your-paytm-merchant-id
PAYTM_MERCHANT_KEY=your-paytm-merchant-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Production Security Settings
# Set these to 'true' in production
TRUST_PROXY=false
SECURE_COOKIES=false
HTTPS_ONLY=false

# API Rate Limiting
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW=15
AUTH_RATE_LIMIT_MAX=5

# File Security
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
MAX_FILES_PER_REQUEST=10

# Database Security
DB_CONNECTION_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000
DB_MAX_POOL_SIZE=10

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-app.report-uri.com/r/d/csp/enforce

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30